<Window x:Class="WypozyczalniaFilmow.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WypozyczalniaFilmow.Views"
        mc:Ignorable="d"
        Title="Wypożyczalnia filmów" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Użytkownicy" Command="{Binding NavigateToUserPageCommand}" />
            <MenuItem Header="Filmy" Command="{Binding NavigateToFilmPageCommand}" />
            <MenuItem Header="Wypożyczenia" Command="{Binding NavigateToRentPageCommand}" />
        </Menu>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
