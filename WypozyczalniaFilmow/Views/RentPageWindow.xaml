<Page x:Class="WypozyczalniaFilmow.Views.RentPageWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WypozyczalniaFilmow.Views"
      xmlns:views="clr-namespace:WypozyczalniaFilmow.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RentPageWindow">
    <Grid>

        <Button Content="{Binding ContentText}" Command="{Binding ShowAddUserFormCommand}" HorizontalAlignment="Left" Margin="0,218,0,0" VerticalAlignment="Top"/>
        <Grid Margin="0,250,550,0" Visibility="{Binding AddUserVisibility}">
            <views:UserRegistrationView x:Name="UserForm" Height="200" DataContext="{Binding UserViewModel}"/>
        </Grid>
    </Grid>
</Page>
